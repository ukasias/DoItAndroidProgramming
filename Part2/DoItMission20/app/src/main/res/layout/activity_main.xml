<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="쿠폰"
        android:textStyle="bold"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/showButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰 보이기" />
        <Button
            android:id="@+id/hideButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰 감추기" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@id/buttons"/>

    <TextView
        android:id="@+id/vips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/frameLayout"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/frameLayout"
        android:layout_marginBottom="30dp"
        android:text="VIPS"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"/>

    <ImageView
        android:id="@+id/coupon1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/vips"
        android:layout_alignLeft="@id/frameLayout"
        android:layout_marginLeft="10dp"
        android:src="@drawable/coupon"/>

    <TextView
        android:id="@+id/starbucks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/frameLayout"
        android:layout_marginRight="30dp"
        android:layout_alignBottom="@id/frameLayout"
        android:layout_marginBottom="260dp"
        android:text="스타벅스"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <ImageView
        android:id="@+id/coupon2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/starbucks"
        android:layout_alignRight="@id/frameLayout"
        android:layout_marginRight="40dp"
        android:src="@drawable/coupon"/>

</RelativeLayout>